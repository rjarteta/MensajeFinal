module ArchivosHelper
  
  def agregar_archivo_a_entrada
    link_to_function 'Agregar' do |page|
      page.insert_html "archivos_en_entrada", "bottom", :partial => "campos_para_entrada"
    end
  end
  
  #Peso de un archivo
  def peso?(archivo)
    if archivo.peso > 1024
      number_with_precision(archivo.peso.to_f / 1024, :precision => 2) + " MB"
    else
      archivo.peso.to_s+" KB"
    end
  end
end
