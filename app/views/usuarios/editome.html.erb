<h2>Editar Usuario</h2>
<div class="error"><%= error_messages_for :usuario  %></div>
<% form_for @usuario, :url =>{:action => "update"}, :html => {:action => :put} do |f| %>
  <p><b><%= f.label "nombre" %></b><br/>
  <%= f.text_field "nombre" %></p>
  <p><b><%= f.label "localizacion" %></b><br/>
  <%= f.text_field "localizacion" %></p>
  <p><b><%= f.label "email" %></b><br/>
  <%= f.text_field "email" %></p>
  <p><b><%= f.label "password", "Contraseña" %></b><br/>
  <%= f.text_field "password" %></p>
  <p><b><%= f.label "password_confirmation", "Confirmar contraseña" %></b><br/>
  <%= f.text_field "password_confirmation" %></p>
  <p><%= f.submit "Actualizar" %></p>
  <!-- TODO: Submit Image -->
<% end %>
<p><%= link_to "Cancelar", root_url %></p>